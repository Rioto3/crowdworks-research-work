{
  "manifest_version": 2,
  "name": "ワンクリックMD保存",
  "version": "1.0",
  "description": "ページのMarkdownバージョンをワンクリックでダウンロード",
  "permissions": ["tabs", "storage", "<all_urls>"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}