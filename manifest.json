{
  "manifest_version": 2,
  "name": "CrowdWorks MD保存",
  "version": "1.0",
  "description": "CrowdWorksのページをMarkdownで即時ダウンロード",
  "permissions": ["tabs"],
  "content_scripts": [
    {
      "matches": ["*://*.crowdworks.jp/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}